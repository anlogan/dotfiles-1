[user]
	name = Dave Reisner
	email = dreisner@archlinux.org

[sendemail]
	smtpserver = /home/noclaf/bin/msmtp-arch
	supresscc = self

[alias]
	all = !git-all
	br = branch
	reb = rebase
	co = checkout
	last = show --stat HEAD
	logdel = log --diff-filter=D --summary
	out = !git-out
	st = status
	countcommits = shortlog -sn --no-merges
	reup = remote update

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	grep = yes

[merge]
	tool = vimdiff
	log = true

[push]
	default = current

[help]
	autocorrect = 1

[branch "master"]
	remote = origin
	merge = master

[log]
	decorate = full

[diff]
	rename = copies

[url "git://github.com/"]
	insteadOf = gh:

# vim: set ft=gitconfig noet:
[tar "tar.gz"]
	command = pigz -c
[core]
	compression = 9
