cpu_avg_samples 2
net_avg_samples 2
update_interval 1
default_color white
use_spacer right
no_buffers yes
uppercase no
background no

TEXT
[ ${execi 1800 ~/.conky/getWeather.sh 07712} ] [ $nodename : $kernel : $uptime : ${execi 120 /home/haruko/.conky/updatecount.sh} Upd ] [ CPU: ${cpu cpu1}% ${cpu cpu2}% ] [ RAM: ${memperc}% ]${execi 300 /home/haruko/.conky/hddmon.sh} [ NET: ${downspeed eth0} down | ${upspeed eth0} up ] [ Vol: ${exec /home/haruko/.conky/getVolume.sh}%  ] ${execi 5 ~/.conky/nowPlaying.sh}[ $time ]
