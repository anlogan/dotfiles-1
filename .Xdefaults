! screen font
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

! x11 mouse theme
Xcursor*theme: DMZ-White
Xcursor.size:  24

! general
URxvt*depth: 32
URxvt*background: [75]#000000
URxvt*foreground:#eeeeee
URxvt*scrollBar:false
URxvt*saveLines:32767
URxvt*cursorColor:#83C048
URxvt*highlightColor:#3465a4
URxvt.font: -*-terminus-medium-r-*-*-14-*-*-*-*-*-iso10646-1
URxvt.boldFont: -*-terminus-bold-*-*-*-14-*-*-*-*-*-iso10646-1
URxvt*geometry:100x30

! colors
URxvt*color0:#eeeeee
URxvt*color1:#CC0000
URxvt*color2:#6AAD2B
URxvt*color3:#C4A000
URxvt*color4:#3465A4
URxvt*color5:#948696
URxvt*color6:#06989A
URxvt*color7:#EEEEEE
URxvt*color8:#666666
URxvt*color9:#EF2929
URxvt*color10:#8AE234
URxvt*color11:#FCE94F
URxvt*color12:#729FCF
URxvt*color13:#BCACBB
URxvt*color14:#34E2E2
URxvt*color15:#FFFFFF
URxvt*colorBD:#FFFFFF

! make web links clicky
URxvt.perl-ext-common: default,matcher
URxvt.urlLauncher: chromium-browser
URxvt.matcher.button: 1
URxvt.matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]
