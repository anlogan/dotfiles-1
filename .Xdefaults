! screen font
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

! x11 mouse theme
Xcursor*theme: DMZ-White
Xcursor.size:  24

! general
URxvt*depth: 32
URxvt*scrollBar:false
URxvt*saveLines:32767
URxvt*cursorColor:#83C048
URxvt*highlightColor:#222222
!URxvt*highlightColor:#3465a4
URxvt.font: -*-terminus-medium-r-*-*-14-*-*-*-*-*-iso10646-1
URxvt.boldFont: -*-terminus-bold-*-*-*-14-*-*-*-*-*-iso10646-1
URxvt*geometry:100x30

! colors --------------------------------------
*background:[75]#000000
*foreground:#eeeeee

! Black
*color0:#444444
*color8:#666666

! Red
*color1:#CC0000
*color9:#EF2929

! Green
*color2:#6AAD2B
*color10:#8AE234

! Yellow
*color3:#C4A000
*color11:#FCE94F

! Blue
*color4:#3465A4
*color12:#729FCF

! Magenta
*color5:#948696
*color13:#BCACBB

! Cyan
*color6:#89B6E2
*color14:#34E2E2

! White
*color7:#EEEEEE
*color15:#FFFFFF

! make web links clicky
URxvt.perl-ext-common: default,matcher
URxvt.urlLauncher: chromium-browser
URxvt.matcher.button: 1
URxvt.matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]
